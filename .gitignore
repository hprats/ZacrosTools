!examples/**/*.txt
!examples/**/*.dat
!examples/**/*.md
!examples/**/*.png
!examples/**/*.pdf
!examples/**/*.csv
!examples/**/*.yml

!tests/**/*.py
!tests/**/*.txt
!tests/**/*.dat
